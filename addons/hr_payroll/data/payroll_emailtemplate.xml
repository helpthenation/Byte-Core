<?xml version="1.0" ?>
<odoo>
    <!-- Mail template is done in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="0">

        <!--Email template -->
        <record id="email_template_payroll" model="mail.template">
            <field name="name">Payroll - Request Approval</field>
            <field name="email_from">${(object.company_id.email or '')|safe}</field>
            <field name="subject">${object.name or 'n/a' }</field>
            <field name="email_to">${object.first_approver_id.work_email or ''}</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip_run"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template"
                   ref="hr_payroll.payroll_report"/>
            <field name="report_name">${object.name}</field>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">

    <p>Hello ${object.first_approver_id.name},</p>
    
    <p>Payroll Approval Request</p>

    <p style="border-left: 1px solid #8e0000; margin-left: 30px;">
       &nbsp;&nbsp;<strong>Payroll Approval Request for</strong><br />
       &nbsp;&nbsp;<strong>${object.name}</strong><br />
       &nbsp;&nbsp;Period from: ${object.date_start}<br />
       &nbsp;&nbsp;Period to:  ${object.date_end} <br />
    </p>
    <br/>
    <p>Please find attached ${object.name} for Approval.</p>
    <p>Thank you!</p>
</div>
            ]]></field>
        </record>
    </data>
</odoo>
