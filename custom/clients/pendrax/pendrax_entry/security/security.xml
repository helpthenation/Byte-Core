<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html>

<odoo>
    <data noupdate="0">

        <record id="module_category_pendrax" model="ir.module.category">
            <field name="name">ERP Management</field>
            <field name="sequence">22</field>
        </record>

        <record id="group_hr_user" model="res.groups">
            <field name="name">HR User</field>
            <field name="category_id" ref="module_category_pendrax"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_hr_officer" model="res.groups">
            <field name="name">HR Officer</field>
            <field name="category_id" ref="module_category_pendrax"/>
            <field name="implied_ids" eval="[(4, ref('pendrax_entry.group_hr_user'))]"/>
        </record>

        <record id="group_hr_supervisor" model="res.groups">
            <field name="name">HR Supervisor</field>
            <field name="category_id" ref="module_category_pendrax"/>
            <field name="implied_ids" eval="[(4, ref('pendrax_entry.group_hr_officer'))]"/>
        </record>

        <record id="group_hr_manager" model="res.groups">
            <field name="name">HR Manager</field>
            <field name="category_id" ref="module_category_pendrax"/>
            <field name="implied_ids" eval="[(4, ref('pendrax_entry.group_hr_supervisor'))]"/>
        </record>

        <record id="group_operations_officer" model="res.groups">
            <field name="name">Operations Officer</field>
            <field name="category_id" ref="module_category_pendrax"/>
            <field name="implied_ids" eval="[(4, ref('pendrax_entry.group_hr_user'))]"/>
        </record>
        <record id="group_operations_manager" model="res.groups">
            <field name="name">Operations Manager</field>
            <field name="category_id" ref="module_category_pendrax"/>
            <field name="implied_ids" eval="[(4, ref('pendrax_entry.group_operations_officer'))]"/>
        </record>

        <record id="group_maintenence_manager" model="res.groups">
            <field name="name">Maintenance Manager</field>
            <field name="category_id" ref="module_category_pendrax"/>
            <field name="implied_ids" eval="[(4, ref('pendrax_entry.group_hr_user'))]"/>

        </record>

        <record id="group_finance_manager" model="res.groups">
            <field name="name">Finance Manager</field>
            <field name="category_id" ref="module_category_pendrax"/>
            <field name="implied_ids" eval="[(4, ref('pendrax_entry.group_hr_user'))]"/>
        </record>


        <record id="group_director" model="res.groups">
            <field name="name">Director</field>
            <field name="category_id" ref="module_category_pendrax"/>
            <field name="implied_ids" eval="[(4, ref('pendrax_entry.group_hr_manager'))]"/>
        </record>

        <!-- Rule For Warehouse Request Record As A Department User -->

        <record id="rule_hr_employee_as_hr_user" model="ir.rule">
            <field name="name">Rule EMployee as HR User</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_hr_user'))]"/>
        </record>
        <record id="rule_res_users_as_hr_user" model="ir.rule">
            <field name="name">Rule Users as HR User</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_hr_user'))]"/>
        </record>

        <record id="rule_hr_contract_as_hr_user" model="ir.rule">
            <field name="name">Rule Contract as HR User</field>
            <field name="model_id" ref="hr_contract.model_hr_contract"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_hr_user'))]"/>
        </record>

        <record id="rule_hr_payslip_as_hr_user" model="ir.rule">
            <field name="name">Rule Payslip as HR User</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_hr_user'))]"/>
        </record>

        <record id="rule_hr_loan_as_hr_user" model="ir.rule">
            <field name="name">Rule Loan as HR User</field>
            <field name="model_id" ref="hr_payroll_loan.model_hr_payroll_loan"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_hr_user'))]"/>
        </record>

        <record id="rule_hr_leave_as_hr_user" model="ir.rule">
            <field name="name">Rule Leave as HR User</field>
            <field name="model_id" ref="hr_holidays.model_hr_holidays"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_hr_user'))]"/>
        </record>

    </data>
</odoo>
