<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="action_towing_resource_towing_request_form_btn" model="ir.actions.act_window">
            <field name="name">Towing Requests</field>
            <field name="res_model">auto.towing</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_towing_resource_id': active_id}</field>
        </record>

        <!-- Form view  of auto Towing Resource -->
        <record id="view_auto_towing_resource_form" model="ir.ui.view">
            <field name="name">auto.towing.resource.form</field>
            <field name="model">auto.towing.resource</field>
            <field name="arch" type="xml">
                <form string="Partner">
                <header>
                   <button name="set_terminate" string="Terminate " type="object"
                           states="active" icon="fa-times-circle" class="oe_highlight"/>
                   <button name="set_draft" string="Set to Draft" type="object"
                           states="confirm,boarding" icon="fa-times-circle" class="oe_highlight"/>
                   <button name="set_confirm" string="Confirm" type="object"
                           states="draft" icon="fa-check" class="oe_highlight"/>
                   <button name="set_on_board" string="Onboard " type="object"
                           icon="fa-certificate" class="oe_highlight" states="confirm,terminate"/>
                   <button name="set_active" type="object" string="Activate "
                           states="boarding" icon="fa-check"/>
                   <field name="state" widget="statusbar" nolabel="1"/>
               </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <group col="2">
                            <group col="4">
                                <button name="%(action_towing_resource_towing_request_form_btn)d"
                                    type="action"
                                    icon="fa-cogs"
                                    class="oe_inline oe_stat_button">
                                    <lable style="">Services</lable>
                                </button>
                                <br/>
                                <button name="%(action_towing_resource_towing_request_form_btn)d"
                                    type="action"
                                    icon="fa-cogs"
                                    class="oe_inline oe_stat_button">
                                    <lable style="">Services</lable>
                                </button>
                                <br/>
                                <button name="%(action_towing_resource_towing_request_form_btn)d"
                                    type="action"
                                    icon="fa-cogs"
                                    class="oe_inline oe_stat_button">
                                    <lable style="">Services</lable>
                                </button>
                                <br/>
                                <button name="%(action_towing_resource_towing_request_form_btn)d"
                                    type="action"
                                    icon="fa-cogs"
                                    class="oe_inline oe_stat_button">
                                    <lable style="">Services</lable>
                                </button>
                            </group>
                            <group col="2">
                            </group>
                        </group>
                    </div>
                    <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image", "size": [90, 90]}'/>
                    <div class="oe_title">
                        <field name="is_company" invisible="1"/>
                        <field name="partner_type" widget="radio"
                            class="oe_edit_only"
                            options="{'horizontal': true}"/>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name" />
                        </h1>
                    </div>

                    <group>
                        <group col="2" string="Basic Information">
                            <field name="contact_person" attrs="{'invisible': [('is_company', '=', False)]}" placeholder="Company Representative"/>
                            <field name="representative_role" attrs="{'invisible': [('is_company', '=', False)]}" placeholder="eg. Fleet Manager"/>
                            <field name="representative_phone" attrs="{'invisible': [('is_company', '=', False)]}"/>
                            <field name="company_address" attrs="{'invisible': [('is_company', '=', False)], 'required': [('is_company', '=', True)]}"/>
                            <field name="company_website" attrs="{'invisible': [('is_company', '=', False)]}"/>
                            <field name="gender" attrs="{'invisible': [('is_company', '=', True)], 'required': [('is_company', '=', False)]}"/>
                            <field name="mobile" widget="mobile" />
                            <field name="email" widget="email" />
                            <field name="company_id" domain="[('is_company', '=', True)]" attrs="{'invisible': [('is_company', '=', True)]}"/>
                        </group>
                        <group col="2" string="Other Information">
                            <field name="rating_score" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page name='internal_notes' string="Last Location" attrs="{'invisible': [('is_company', '=', True)]}">
                            <!--
                            <field name="gps_location"  widget="map"/>
                            -->
                        </page>
                        <page name='internal_notes' string="Internal Notes">
                            <field name="comment" placeholder="Internal note..."/>
                        </page>
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view  of auto Towing Resource -->

        <record id="view_auto_towing_resource_tree" model="ir.ui.view">
            <field name="name">auto.towing.resource.tree</field>
            <field name="model">auto.towing.resource</field>
            <field name="arch" type="xml">
                <tree string="Partner Information">
                    <field name="auto_messiah_id"/>
                    <field name="name"/>
                    <field name="mobile"/>
                    <field name="towing_state"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Search view  of auto Towing Resource -->

        <record id="view_auto_towing_resource_search" model="ir.ui.view">
            <field name="name">auto.towing.resource.search</field>
            <field name="model">auto.towing.resource</field>
            <field name="arch" type="xml">
                <search string="Partner Information">
                    <group col="10" colspan="4">
                        <field name="auto_messiah_id"/>
                        <field name="name"/>
                        <field name="mobile"/>
                    </group>
                    <newline/>
                    <group expand="0" string="Group By..." colspan="12" col="10">
                        <filter icon="terp-project" string="Availability" help="By Availability" context="{'group_by':'towing_state'}" />
                        <filter icon="terp-project" string="Onboarding State" help="By On boarding State" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Kanban view  of auto Towing Resource -->

        <record id="auto_towing_resource_kanban_view" model="ir.ui.view">
            <field name="name">Grid View</field>
            <field name="model">auto.towing.resource</field>
            <field name="arch" type="xml">
                <kanban create="0" edit="0">
                    <field name="color"/>
                    <field name="name"/>
                    <field name="email"/>
                    <templates>
                        <t t-name="kanban-box">
                            <t t-set="color" t-value="kanban_color(record.color.raw_value)" />
                            <div t-att-class="color + (record.color.raw_value == 1 ? ' oe_kanban_color_alert' : '')">
                                <div class="oe_kanban_box oe_kanban_color_border">
                                    <div class="oe_kanban_box_header oe_kanban_color_bgdark oe_kanban_color_border oe_kanban_draghandle">
                                        <table class="oe_kanban_table">
                                            <tr>
                                                <td class="oe_kanban_title1" align="left" valign="middle" style="padding-left:10px;">
                                                    <h4>
                                                        <a type="open">
                                                            <field name="name"/>
                                                            <field name="gender" invisible="1"/>
                                                            <field name="state" invisible="1"/>
                                                        </a>
                                                    </h4>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_box_show_onclick_trigger oe_kanban_color_border">
                                        <table class="oe_kanban_table">
                                            <tr width="200" height="100">
                                                <td valign="top" width="64" align="left">
                                                    <a type="open">
                                                        <img heigh="90" width="90" t-att-src="kanban_image('auto.towing.resource', 'image', record.id.value)"/>
                                                    </a>
                                                </td>
                                                <td valign="top" align="left" style="padding-left:10px;">
                                                    <table>
                                                        <tr>
                                                            <td>Auto Messiah ID :</td>
                                                            <td style="padding-left:10px;">
                                                                <b>
                                                                    <field name="auto_messiah_id"/>
                                                                </b>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <center>
                                                        <b>
                                                            <field name="partner_type"/>
                                                        </b>
                                                    </center>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="oe_kanban_buttons_set oe_kanban_color_border oe_kanban_color_bglight oe_kanban_box_show_onclick">
                                        <div class="oe_kanban_left">
                                            <a string="Change Color" icon="color-picker" type="color" name="color"/>
                                        </div>
                                        <br class="oe_kanban_clear"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_auto_all_towing_resources" model="ir.actions.act_window">
            <field name="name">All Towing Resources</field>
            <field name="res_model">auto.towing.resource</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
        <record id="action_auto_towing_individual" model="ir.actions.act_window">
            <field name="name">Individuals</field>
            <field name="res_model">auto.towing.resource</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_company', '=', False)]</field>
            <field name="context">{'default_partner_type': 'person','default_is_company': 0}</field>
        </record>
        <record id="action_auto_towing_company" model="ir.actions.act_window">
            <field name="name">Companies</field>
            <field name="res_model">auto.towing.resource</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_company', '=', True)]</field>
            <field name="context">{'default_partner_type': 'company','default_is_company': 1}</field>
        </record>
    </data>
</odoo>