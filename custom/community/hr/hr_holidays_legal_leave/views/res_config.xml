<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_holidays_config" model="ir.ui.view">
            <field name="name">hr.holidays.config.settings</field>
            <field name="model">hr.holidays.config.settings</field>
            <field name="inherit_id"
                   ref="hr_holidays_settings.hr_holidays_config_settings"/>
            <field name="arch" type="xml">

                <header position="after">
                    <group>
                        <label for="id" string="Legal leave"/>
                        <div>
                            <div>
                                <label for="legal_holidays_status_id"
                                       class="oe_inline"/>
                                <field name="legal_holidays_status_id"
                                       class="oe_inline"/>
                            </div>
                        </div>
                    </group>

                </header>
            </field>
        </record>
    </data>
</odoo>