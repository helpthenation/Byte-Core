<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_payrolladvice">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <t t-foreach="doc" t-as="o">
                        <div class="page">
                            <table>
                                <tr>
                                    <td>
                                        <p>
                                            <span t-esc="time.strftime('%m-%d-%Y')"/>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>
                                            <span>To,</span>
                                        </strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>
                                            <span>The Manager,</span>
                                        </strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>
                                            <span t-esc="o.bank_id.name"/>
                                            Bank
                                        </strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <p>
                                            <span>Dear Sir/Madam,</span>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <p class="text-center">
                                            <strong>Payment Advice from
                                                <span t-esc="o.name"/>
                                                <span t-if="o.company_bank_id">
                                                    A/C no.
                                                    <span t-esc="o.company_bank_id.acc_number"/>
                                                </span>
                                                form period
                                                <span t-esc="get_month['from_name']"/>
                                                to
                                                <span t-esc="get_month['to_name']"/>
                                            </strong>
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <p>
                                            <span t-esc="o.note"/>
                                        </p>
                                    </td>
                                </tr>
                            </table>

                            <table class="table table-condensed">
                                <thead>
                                    <tr style="border-top: 1px solid black">
                                        <th>SI No.</th>
                                        <th>Name Of Employee</th>
                                        <th>Identification No.</th>
                                        <th>Bank Account No.</th>
                                        <th>By salary (Le)</th>
                                        <th>C/D</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="get_detail"
                                        t-as="l">
                                        <td>
                                            <span t-esc="l_index+1">.</span>
                                        </td>
                                        <td>
                                            <span t-esc="l['name']"/>
                                        </td>
                                        <td>
                                            <span t-esc="l['empid']"/>
                                        </td>
                                        <td>
                                            <span t-esc="l['acc_no']"/>
                                        </td>
                                        <td>
                                            <span t-esc="l['bysal']"/>
                                        </td>
                                        <td>
                                            <span t-esc="l['debit_credit']"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black"
                                        style="border-bottom: 1px solid black">
                                        <td colspan="2"/>
                                        <td colspan="2">
                                            <strong>Total (Le):</strong>
                                        </td>
                                        <td colspan="2">
                                            <strong>
                                                <span t-esc="get_bysal_total"/>

                                            </strong>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table>
                                <tr>
                                    <td>
                                       <p>Prepared By:...................................... </p>
                                        <p>Admin/HR Supervisor</p>
                                        <p>Date:..........</p>
                                        <p>Sign:..........</p>
                                    </td>
                                    <td>
                                       <p>Reviewed By:...................................... </p>
                                        <p>Office Manager</p>
                                        <p>Date:..........</p>
                                        <p>Sign:..........</p>
                                    </td>
                                    <td>
                                       <p>Approved By:...................................... </p>
                                        <p>Admin/Finance Director</p>
                                        <p>Date:..........</p>
                                        <p>Sign:..........</p>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>