<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_payslip_run_form" model="ir.ui.view">
            <field name="name">hr.payslip.run.form</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payslip_run_button_box.hr_payslip_run_form"/>
            <field name="arch" type="xml">
                <data>
                    <div class="oe_right oe_button_box" position="inside">
                        <button name="view_run_amendments"
                                class="oe_stat_button" icon="fa-bars"
                                type="object">
                            <field name="amendment_count"
                                   widget="statinfo" string="Amendments"/>
                        </button>
                    </div>
                    <field name="hr_period_id" position="replace">
                        <field name="hr_period_id" required="1"/>
                    </field>
                </data>
            </field>
        </record>
    </data>
</odoo>